{
  "manifest_version": 3,
  "name": "AlphaApple - FruitBox AI Assistant",
  "version": "1.0.0",
  "description": "AI assistant for Korean FruitBox puzzle game",
  
  "permissions": [
    "activeTab"
  ],
  
  "content_scripts": [
    {
      "matches": ["*://*/*", "file://*/*"],
      "js": [
        "libs/ort-web.min.js",
        "fruitbox_ai.js", 
        "content_script.js"
      ],
      "css": ["styles.css"],
      "run_at": "document_end"
    }
  ],
  
  "web_accessible_resources": [
    {
      "resources": ["models/fruitbox_ppo.onnx"],
      "matches": ["*://*/*"]
    }
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "FruitBox AI Assistant"
  },
  
  "icons": {
    "16": "icons/apple-16.png",
    "48": "icons/apple-48.png", 
    "128": "icons/apple-128.png"
  }
}